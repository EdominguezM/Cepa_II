<!DOCTYPE html>
<html>
  <head>
    <title>Cepas</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    	<%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body class="homepage is-preload">
	
	
    <div id="page-wrapper">
      <section id="header">

					<!-- Logo -->
						<h1><a href="index.html">Vinos Chilenos</a></h1>

					<!-- Nav -->
						<nav id="nav">
							<ul>
							
								<% if user_signed_in? %>
                <li class="current"><%= link_to 'Home', root_path %></li>
								<li><%= link_to 'Vinos', wines_path %></li>
								<li><%= link_to 'Cepas', strains_path %></li>
								<li><%= link_to 'Enologos', oenologists_path %></li>
								<li><%= link_to 'Revistas', magazines_path %></li>
                <li><%= link_to 'Actualizar datos', edit_user_registration_path %></li>
                <li role="separator" class="divider"></li>
                <li id="sesion"><%= link_to 'Cerrar sesión', destroy_user_session_path, method: :delete %></li>
                <% else %>
                  <li><%= link_to 'Iniciar Sesión', new_user_session_path %></li>
                  <li><%= link_to 'Registrase', new_user_registration_path %></li>
                <% end %>
							</ul>
						</nav>

					<!-- Banner -->
					<section id="banner">
							<header>
								<h2>WINES</h2>
								<p>Creación de Vinos</p>
						</header>
					</section>

				</section>
      		<%= yield %>

      	<section id="footer">
					<div class="container">
						<div class="row">
							<div class="col-12">

								<!-- Copyright -->
									<div id="copyright">
										<ul class="links">
											<li>&copy; Untitled. All rights reserved.</li><li>Design: <a href="http://html5up.net">HTML5 UP</a></li>
										</ul>
									</div>

							</div>
						</div>
					</div>
				</section>
    </div>
  </body>

  	
</html>
